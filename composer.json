{
    "name": "navikt/aad-api-client",
    "description": "Azure AD API client",
    "homepage": "https://github.com/navikt/aad-api-client-php",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Christer Edvartsen"
        }
    ],
    "support": {
        "issues": "https://github.com/navikt/aad-api-client-php/issues",
        "source": "https://github.com/navikt/aad-api-client-php"
    },
    "require": {
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "php": "^7.4",
        "phpunit/phpunit": "^9.2",
        "phpstan/phpstan": "^0.12.14",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "phpstan/extension-installer": "^1.0",
        "vimeo/psalm": "^3.11",
        "psalm/plugin-phpunit": "^0.10.1"
    },
    "autoload": {
        "psr-4": {
            "NAVIT\\AzureAd\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NAVIT\\AzureAd\\": "tests/"
        }
    },
    "scripts": {
        "lint": "for file in `git ls-files '*.php'`; do php -l $file; done",
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html build/coverage",
        "phpstan": "vendor/bin/phpstan analyse src tests -l max --no-progress",
        "psalm": "vendor/bin/psalm --no-progress",
        "sa": [
            "@phpstan",
            "@psalm"
        ],
        "ci": [
            "composer validate",
            "@lint",
            "@test",
            "@sa"
        ]
    }
}
